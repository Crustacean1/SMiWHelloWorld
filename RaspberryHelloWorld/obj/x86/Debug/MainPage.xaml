<Page x:ConnectionId='1'
    x:Class="RaspberryHelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RaspberryHelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="424*"/>
            <ColumnDefinition Width="433"/>
            <ColumnDefinition Width="423*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="941*"/>
        </Grid.RowDefinitions>
        <TextBox x:ConnectionId='2' x:Name="SubmitField" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Default" VerticalAlignment="Top" Height="34" Width="197" TextAlignment="Center" Margin="0,429,0,0"                                     Grid.Column="1"/>
        <TextBlock x:ConnectionId='3' x:Name="NoteDisplayField" HorizontalAlignment="Center" Margin="0,361,0,0" Grid.Row="1" TextWrapping="Wrap" Text="No note selected" VerticalAlignment="Top" Height="35" Width="195" FontSize="20" TextAlignment="Center"                                               Grid.Column="1"/>
        <Button x:ConnectionId='4' x:Name="SubmitButton" Content="Submit" Margin="100,504,0,0" Grid.Row="1" VerticalAlignment="Top"                            Width="100" Height="32" Grid.Column="1"/>
        <ProgressBar x:ConnectionId='5' x:Name="NoteCountBar" HorizontalAlignment="Center" Height="12" Margin="0,327,0,0" Grid.Row="1" VerticalAlignment="Top" Width="322" Grid.Column="1"/>
        <ListView x:ConnectionId='6' Grid.Row="1" Margin="58,23,82,399"                                                                           Grid.Column="1">
            <ListView.ItemTemplate>
                <DataTemplate                            >
                    <TextBlock x:ConnectionId='9'                         HorizontalAlignment="Center" VerticalAlignment="Center" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:ConnectionId='7' x:Name="RemoveButton" Content="Remove" Margin="0,504,100,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="32"                            Grid.Column="1"/>
    </Grid>
</Page>

